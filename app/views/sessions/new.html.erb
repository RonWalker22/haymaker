<center>
<p><%= flash[:notice] %></p>

<h1>Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>
  
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <br>
  <br>

  <%= f.submit "Log in" %>
<% end %>

<p>New user? <%= link_to "Sing up now!", signup_path  %></p>
</center>
