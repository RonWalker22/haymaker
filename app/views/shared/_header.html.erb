<header align="right">
  <% if logged_in? %>
    <ul>
      <li>Player:<%= current_player.username%></li>
      <li>Cash:<%= current_player.cash%></li>
      <li>Bitcoin: <%= current_player.bitcoin %></li>
      <li>Rank: <%= current_player.rank %></li>
      <li><%= link_to "Log out", logout_path, method: :delete %></li>
    </ul>
  <% else %>
    <%= link_to "Login", login_path %>
  <% end %>
</header>