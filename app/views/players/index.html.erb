<p id="notice"><%= flash[:notice] %></p>

<h1 class="index_title">Top Haymakers</h1>

<table class="index">
  <thead>
    <tr>
      <th class="index_titles">Username</th>
      <th class="index_titles">USD/USDT</th>
      <th class="index_titles">Bitcoin</th>
      <th class="index_titles">Rank</th>
      <th class="index_titles">Email</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td class="index_values">
          <%= link_to player.username, player %>
        </td>

        <td class="index_values">
          <%= player.coin_total('USD') + player.coin_total('USDT') %>
        </td>
        <td class="index_values">
          <%= player.coin_total('BTC')%>
        </td>
        <td class="index_values"><%= player.rank %></td>
        <td class="index_values"><%= player.email %></td>
      </tr>
    <% end %>
  </tbody>
</table> 