<div class="columns is-centered">
  <div class="column is-8">
    <div class="box">
      <div class="tabs is-centered is-fullwidth">
        <ul>
          <li><%= link_to 'Future Leagues', leagues_path %></li>
          <li><%= link_to 'Current Leagues', current_leagues_path %></li>
          <li class='is-active'><%= link_to 'Past Leagues', past_leagues_path%>
          </li>
        </ul>
      </div>
        <table class= 'table'>
          <thead>
            <tr>
              <th>Name</th>
              <th>Commissioner</th>
              <th>Entry fee</th>
              <th>Start date</th>
              <th>Rounds</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Name</th>
              <th>Commissioner</th>
              <th>Entry fee</th>
              <th>Start date</th>
              <th>Rounds</th>
            </tr>
          </tfoot>

          <tbody>
            <% @leagues.each do |league| %>
              <% next unless league.end_date.past?%>
              <tr>
                <td>
                  <%=link_to league.name, league_path(league.id) %>
                </td>
                <td>
                    <%= link_to User.find(league.commissioner_id).name,
                                user_path(User.find(league.commissioner_id).id)%>
                </td>
                <td><%= league.entry_fee %></td>
                <td>
                  <%= league.start_date.strftime("%m/%d/%y %I:%M%p").downcase %>
                </td>
                <td><%= league.rounds %></td>

                <td>
                    <% if !current_user.leagues.any? { |l| l.id == league.id }  &&
                            league.start_date.future?
                    %>
                      <%= link_to "Join", join_path(id:league.id), method: :post,
                                                    class: "button is-rounded is-small"
                      %>
                    <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <%= link_to 'New League', new_league_path, class: 'button'%>
    </div>
  </div>
</div>
