<div id="profile_page">
  <% if notice %>
  <p class="notification is-primary center"><%= flash[:notice] %></p>
  <% end %>
  <ul>
    <li class="pp-username">
      <%= @player.username %>
      <% if logged_in? && current_player?(@player) %>
      <%= link_to 'edit' , edit_player_path(@player) %>
      <% end %>  
    </li>
    <li class="pp-other-data">
      <strong>Rank:</strong>
      <%= @player.rank %>
    </li>  
    <% if logged_in? && current_player?(@player) %>
      <li class="pp-other-data">
        <strong>Email:</strong>
        <%= @player.email %>
      </li>
    <% end %>  
  </ul>
</div>